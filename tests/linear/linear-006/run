# -*- mode: sh;-*-

FILE=../../shared/linear/SimpleHiddenWiring.sv

echo "# Example Linearly Wired Circuits"

echo "## Circuits"
echo "\`\`\`"
$1 $FILE | tee Example.dot
echo "\`\`\`"

dot -Tpng Example.dot > Example.png

echo "## Verilator"
echo "\`\`\`"

verilator --lint-only --Wall $FILE 2>&1


echo "\`\`\`"


# -- EOF
